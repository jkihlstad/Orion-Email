# =============================================================================
# Orion Email App - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values

# =============================================================================
# CLERK AUTHENTICATION (Required)
# =============================================================================
# Get these from your Clerk Dashboard: https://dashboard.clerk.com
CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx
CLERK_ISSUER_URL=https://your-clerk-instance.clerk.accounts.dev
CLERK_JWKS_URL=https://your-clerk-instance.clerk.accounts.dev/.well-known/jwks.json

# iOS App Clerk Configuration
CLERK_FRONTEND_API=clerk.your-domain.com

# =============================================================================
# CONVEX (Required)
# =============================================================================
# Get these from your Convex Dashboard: https://dashboard.convex.dev
CONVEX_URL=https://graceful-possum-637.convex.cloud
CONVEX_DEPLOY_KEY=preview:jason-kihlstadius:orion-email-app|eyJ2MiI6ImI5MjAwZGQ3NDRhNzRlOTk5OWM0MGQ1M2Y0OGU5NjRmIn0=

# Development URL (for local development)
VITE_CONVEX_URL=https://your-deployment.convex.cloud

# =============================================================================
# EMAIL PROVIDER - GOOGLE/GMAIL (Optional)
# =============================================================================
# Get these from Google Cloud Console: https://console.cloud.google.com
GOOGLE_CLIENT_ID=xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxxxx

# Gmail API Scopes (comma-separated)
# Required scopes: gmail.readonly, gmail.send, gmail.modify
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.send,https://www.googleapis.com/auth/gmail.modify

# =============================================================================
# EMAIL PROVIDER - MICROSOFT/OUTLOOK (Optional)
# =============================================================================
# Get these from Azure Portal: https://portal.azure.com
OUTLOOK_CLIENT_ID=xxxxx
OUTLOOK_CLIENT_SECRET=xxxxx
OUTLOOK_TENANT_ID=common

# Microsoft Graph API Scopes
OUTLOOK_SCOPES=Mail.Read,Mail.Send,Mail.ReadWrite

# =============================================================================
# OPENAI (Required for AI features)
# =============================================================================
# Get from OpenAI Dashboard: https://platform.openai.com
OPENAI_API_KEY=sk-xxxxx

# TTS Voice Configuration
OPENAI_TTS_VOICE=alloy
OPENAI_TTS_MODEL=tts-1

# Whisper Configuration
OPENAI_WHISPER_MODEL=whisper-1

# =============================================================================
# BRAIN API (Required for AI features)
# =============================================================================
# URL for the Brain service (System #4)
BRAIN_API_URL=https://brain.your-domain.com/api
BRAIN_API_KEY=xxxxx

# =============================================================================
# CLOUDFLARE WORKERS (Optional - for email connector)
# =============================================================================
CLOUDFLARE_ACCOUNT_ID=xxxxx
CLOUDFLARE_API_TOKEN=xxxxx

# =============================================================================
# iOS APP CONFIGURATION
# =============================================================================
# Bundle identifier
IOS_BUNDLE_ID=com.orion.emailapp

# App Group for sharing data between extensions
IOS_APP_GROUP=group.com.orion.emailapp

# Keychain access group
IOS_KEYCHAIN_GROUP=com.orion.emailapp.keychain

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
FEATURE_AI_SUMMARIES=true
FEATURE_SUGGESTED_REPLIES=true
FEATURE_VOICE_DICTATION=true
FEATURE_TTS_READ_ALOUD=true
FEATURE_SMART_SEARCH=true

# =============================================================================
# DEVELOPMENT/DEBUG
# =============================================================================
# Enable debug logging
DEBUG_LOGGING=false

# Enable mock data for development
USE_MOCK_DATA=false

# API request timeout (seconds)
API_TIMEOUT=30

# Max retry attempts for failed requests
MAX_RETRIES=3
